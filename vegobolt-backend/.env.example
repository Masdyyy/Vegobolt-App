# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vegobolt

# JWT Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration
# Options: 'gmail', 'smtp', or leave blank for development (console logging)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="Vegobolt <noreply@vegobolt.com>"

# For SMTP (if EMAIL_SERVICE=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Backend/Frontend URLs
# BACKEND_URL is used to build verification links (points to your API host)
# For local LAN device testing, set to your PC IP like: http://192.168.100.28:3000
BACKEND_URL=http://localhost:3000

# FRONTEND_URL is optional and used only as a last fallback.
# Keep it if your frontend and backend are on the same origin.
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=3000
NODE_ENV=development